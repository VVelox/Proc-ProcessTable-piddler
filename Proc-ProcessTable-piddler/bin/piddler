#!/usr/bin/env perl

use strict;
use warnings;
use Getopt::Long;
use Proc::ProcessTable::piddler;

sub version{
        print "ncps v. 0.0.0\n";
	}

sub help{
        print '
';
	}

# defaults
my $version;
my $help;
my $txt=0,
my $pipe=0;
my $unix=0;
my $vregroot=0;
my $dont_dedup=0;

# get the commandline options
Getopt::Long::Configure ('no_ignore_case');
Getopt::Long::Configure ('bundling');
GetOptions(
		   'h' => \$help,
		   'help' => \$help,
		   'v' => \$version,
		   'version' => \$version,
		   't' => \$txt,
		   'P' => \$pipe,
		   'u' => \$unix,
		   'r' => \$vregroot,
		   'd' => \$dont_dedup,
		   );


# print the version info if requested
if ( $version ){
	&version;
	exit;
}

if ( $help ){
	&version;
	&help;
	exit;
}

# real in the list of PIDs
my @PIDs;
foreach my $arg ( @ARGV ){
	my @possibles=split(/\,/, $arg);

	foreach my $pid ( @possibles ){
		if ( $pid !~ /^[0-9]+$/ ){
			die $pid." does not appear to be a PID.\n";
		}
		push( @PIDs, $pid );
	}
}

my $ppp=Proc::ProcessTable::piddler->new(
										 {
										  txt=>$txt,
										  unix=>$unix,
										  pipe=>$pipe,
										  vregroot=>$vregroot,
										  dont_dedup=>$dont_dedup,
										  }
										 );

print $ppp->run( \@PIDs );
exit 0;
